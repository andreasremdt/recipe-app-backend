{
  "name": "recipe-app-backend",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc --project tsconfig.build.json",
    "check": "tsc --noEmit && npm run format:ci",
    "start": "node dist/index.js",
    "dev": "tsc --watch",
    "format": "prettier \"src/**/*\" --write",
    "format:ci": "prettier \"src/**/*\" --check",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "test": "npm run docker:up && prisma migrate deploy && dotenv -e .env.test vitest",
    "test:dev": "dotenv -e .env.test vitest",
    "lint": "eslint \"src/**/*\""
  },
  "author": {
    "name": "Andreas Remdt",
    "email": "me@andreasremdt.com",
    "url": "https://andreasremdt.com"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.16",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/morgan": "^1.9.4",
    "@types/node": "^18.11.18",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.49.0",
    "@typescript-eslint/parser": "^5.49.0",
    "dotenv-cli": "^7.0.0",
    "eslint": "^8.33.0",
    "prettier": "^2.8.3",
    "prisma": "^4.9.0",
    "supertest": "^6.3.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4",
    "vitest": "^0.28.3"
  },
  "dependencies": {
    "@prisma/client": "^4.9.0",
    "bcrypt": "^5.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "joi": "^17.7.0",
    "jsonwebtoken": "^9.0.0",
    "morgan": "^1.10.0"
  }
}
